[colors]
fg = ${xrdb:foreground}
bg = #cc1e1f28
bg-active = #cc000000
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}

[bar/default]
top = true
height = 32
fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 4

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = OpenSans:size=12;1
font-1 = FontAwesome:size=16;1

modules-left = i3
modules-center = xwindow
modules-right = date volume powermenu

tray-position = right
tray-padding = 2
tray-offset-y = 0%
tray-offset-x = 0%
tray-maxsize = 18
tray-detached = false
tray-transparent = false
tray-color = ${colors.bg}

wm-restack = i3

[module/i3]
type = internal/i3
label-unfocused-background = ${colors.bg}
label-unfocused-foreground = ${colors.fg}

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.blue}

label-focused = %name%
label-focused-foreground = ${colors.fg}
label-focused-background = ${colors.bg-active}
label-focused-underline = ${colors.blue}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-visible = %name%
label-visible-underline = ${colors.fg}
label-visible-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.fg}
label-urgent-background = ${colors.bg}
label-urgent-underline = ${colors.red}
label-urgent-padding = 2

[module/xwindow]
type = internal/xwindow

[module/date]
type = internal/date
interval = 60

format = <label>
format-prefix-foreground = ${colors.fg}

label = %date%,  %time%

date = "%a %b %d"
date-alt = "%a %b %d"

time = "%l:%M %p"
time-alt = "%R"

[module/volume]
type = internal/volume

format-muted-background = ${colors.bg}
format-volume-background = ${colors.bg}
format-volume = <label-volume>  <ramp-volume>
label-muted = Muted 

ramp-volume-foreground = ${colors.fg}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open =   Power
label-open-background = ${colors.bg}
label-open-foreground = ${colors.fg}
label-close =   Cancel
label-close-background = ${colors.bg}
label-close-foreground = ${colors.fg}
label-separator = " "
label-separator-foreground = ${colors.fg}

menu-0-0 = Power Off
menu-0-0-exec = sudo poweroff
menu-0-1 = Reboot
menu-0-1-exec = sudo reboot

;[global/wm]
;margin-top = 5
;margin-bottom = 5

; vim: set ft=dosini :
